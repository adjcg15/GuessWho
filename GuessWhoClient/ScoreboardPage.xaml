<Page x:Class="GuessWhoClient.ScoreboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuessWhoClient"
      mc:Ignorable="d"
      Title="Scoreboard" Height="520" Width="900">
    <Grid>
        <Image 
            Source="/Resources/background.png" 
            Stretch="UniformToFill" 
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Image Source="/Resources/logo.ES-MX.png" Margin="8,10,758,452"/>

        <Grid>
            <Label 
                Content="Marcador global" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                FontWeight="Bold" FontSize="18" Margin="0,10,0,0"/>

            <TextBox 
                Style="{StaticResource Searchbar}"
                HorizontalAlignment="Left" Margin="33,85,0,0" TextWrapping="Wrap" 
                VerticalAlignment="Top" Width="734"/>
            <Button Style="{StaticResource SecondaryButton}" Content="Buscar" HorizontalAlignment="Right" Margin="0,83,33,0" VerticalAlignment="Top"/>
            <Image Source="/Resources/search-icon.png" Margin="42,93,837,408"/>
            
            <DataGrid 
                Style="{DynamicResource Table}" 
                ColumnHeaderStyle="{DynamicResource TableColumnHeader}" 
                CellStyle="{DynamicResource TableCell}"
                x:Name="DataGridPlayers" Margin="33,130,33,26">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Position}" Header="Posición"/>
                    <DataGridTextColumn Binding="{Binding Nickname}" Header="Nombre de usuario"/>
                    <DataGridTextColumn Binding="{Binding Score}" Header="Puntuación"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
